{
  "version": "2.0.0",
  "tasks": [
        {
          "label": "Start Playwright MCP",
      "type": "shell",
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--port", "8002", "--browser", "msedge"],
    },
        {
      "label": "Start MCP",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "uv run 'main.py'"
      ],
      "options": {
        "cwd": "${workspaceFolder}/mcps"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Uvicorn running on.*8001.*"
        }
      }
    },
    {
      "label": "Start Streamlit Frontend",
      "type": "shell",
      "command": "uv",
      "args": ["run", "streamlit", "run", "main.py"],
      "options": {
        "cwd": "${workspaceFolder}/streamlit_frontend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*You can now view your Streamlit app in your browser.*"
        }
      }
    },
    {
      "label": "Start Backend",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "fastapi",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*INFO.*Started server process.*",
          "endsPattern": "^.*INFO.*Uvicorn running on.*"
        }
      }
    },
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend",
        "env": {
          "VIRTUAL_ENV": "",
          "PYTHONHOME": "",
          "PYTHONPATH": ""
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Local:.*",
          "endsPattern": "^.*ready in.*"
        }
      }
    },
    {
      "label": "Start Full Stack (Debug)",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Backend",
        // "Start Frontend",
        "Start Streamlit Frontend",
        "Start MCP",
        "Start Playwright MCP"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    }
  ]
}